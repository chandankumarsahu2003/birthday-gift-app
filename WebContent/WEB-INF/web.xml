<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
         http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <display-name>Payment Birthday App</display-name>

    <!-- ✅ Servlet Declaration -->
    <servlet>
        <servlet-name>SaveData</servlet-name>
        <servlet-class>SaveData</servlet-class>
    </servlet>

    <!-- ✅ Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>SaveData</servlet-name>
        <url-pattern>/SaveData</url-pattern>
    </servlet-mapping>

    <!-- ✅ Welcome Page (Optional) -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
